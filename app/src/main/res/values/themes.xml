<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApplicationTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginHeadText">
        <item name="android:textColor">@color/backgroundcolor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">#808080</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginDonthaveAccount">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LoginSignup">
        <item name="android:textColor">@color/backgroundcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="categoryHeadingTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/backgroundcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResulttitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_radio_button_answer">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/backgroundcolor</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/backgroundcolor</item>
    </style>
</resources>