<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApplicationTest"
        tools:targetApi="31">
        <activity
            android:name=".activites.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".activites.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".activites.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".activites.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".activites.QuizSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".activites.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activites.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activites.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>